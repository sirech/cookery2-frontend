{
  "name": "cookery2",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "build": "react-scripts build",
    "linter:js": "npx eslint --config .eslintrc.js 'src/**/*.{ts,tsx}' --max-warnings 0",
    "linter:css": "npx stylelint src/**/*.css",
    "linter": "npm run linter:js && npm run linter:css",
    "linter:fix": "npm run linter:js -- --fix --format codeFrame && npm run linter:css --fix",
    "start": "PORT=3003 react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch": "react-scripts test --verbose=false",
    "bundle": "npm run build && source-map-explorer 'build/static/js/*.js'"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.0",
    "@material-ui/icons": "^4.4.3",
    "auth0-js": "^9.11.3",
    "axios": "^0.19.0",
    "classnames": "^2.2.6",
    "formik": "^1.5.8",
    "formik-material-ui": "^0.0.22",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "react-use": "^12.3.0",
    "typescript": "3.6.3",
    "yup": "^0.27.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.1.1",
    "@testing-library/react": "^9.3.0",
    "@testing-library/user-event": "^7.1.2",
    "@types/auth0-js": "^9.10.6",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.11",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/react-router-dom": "^5.1.0",
    "@types/recompose": "^0.30.7",
    "@types/yup": "^0.26.24",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "coveralls": "^3.0.6",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-react": "^1.1.7",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "http-proxy-middleware": "^0.20.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "pact": "^4.3.2",
    "prettier": "^1.18.2",
    "react-scripts": "3.2.0",
    "source-map-explorer": "^2.1.0",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0"
  },
  "proxy": "http://localhost:4003",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --config .eslintrc.js --max-warnings 0",
    "*.scss": "./go linter-css"
  }
}
