{
  "name": "cookery2",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "build": "react-scripts build",
    "linter:js": "npx eslint --config .eslintrc.js 'src/**/*.{ts,tsx}' --max-warnings 0",
    "linter:css": "npx stylelint src/**/*.css",
    "linter": "npm run linter:js && npm run linter:css",
    "linter:fix": "npm run linter:js -- --fix --format codeFrame && npm run linter:css --fix",
    "start": "PORT=3003 react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch": "react-scripts test --verbose=false",
    "bundle": "npm build && source-map-explorer 'build/static/js/*.js'"
  },
  "dependencies": {
    "@material-ui/core": "^4.3.3",
    "@material-ui/icons": "^4.2.1",
    "axios": "^0.19.0",
    "classnames": "^2.2.6",
    "formik": "^1.5.8",
    "formik-material-ui": "^0.0.22",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-use": "^11.0.0",
    "typescript": "3.5.3",
    "yup": "^0.27.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.1",
    "@testing-library/user-event": "^4.2.4",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.5",
    "@types/react-router-dom": "^4.3.5",
    "@types/recompose": "^0.30.7",
    "@types/yup": "^0.26.22",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "http-proxy-middleware": "^0.19.1",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.1",
    "source-map-explorer": "^2.0.1",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --config .eslintrc.js --max-warnings 0",
    "*.scss": "./go linter-css"
  }
}
